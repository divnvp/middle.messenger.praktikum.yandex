<div class='row'>
  {{#> Card }}
    <form class='registration-page'>
      <div class='registration-page__content'>
        {{> PageTitle title='Регистрация' }}
        {{> InputField className='registration-page__title' title='Почта' name='email' }}
        {{> InputField title='Логин' name='login' }}
        {{> InputField title='Имя' name='first_name' }}
        {{> InputField title='Фамилия' name='second_name' }}
        {{> InputField title='Телефон' name='phone' }}
        {{> InputField title='Пароль' name='password' type='password' }}
        {{> InputField title='Пароль еще раз' name='password-again' type='password' }}
      </div>
      <div class='registration-page__title'>
        {{> Button text='Зарегистрироваться' page='chat' }}
      </div>
      <div>
        {{> Link page='auth' text='Назад' }}
      </div>
    </form>
  {{/ Card }}

  <img src='../background.png' alt='background'>
</div>
